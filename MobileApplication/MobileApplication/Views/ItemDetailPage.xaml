<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.Views.ItemDetailPage"
             Title="Transaction">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Counter Party:" FontSize="Medium" />
        <Label Text="{Binding CounterParty, Mode=OneWay}" FontSize="Small"/>
        <Label Text="Amount:" FontSize="Medium" />
        <Label Text="{Binding Amount, Mode=OneWay}" FontSize="Small"/>
        <Label Text="Details:" FontSize="Medium" />
        <Label Text="{Binding Details, Mode=OneWay}" FontSize="Small"/>
        <Label Text="Time:" FontSize="Medium" />
        <Label Text="{Binding TrTime, Mode=OneWay}" FontSize="Small"/>
        <Label Text="Category:" FontSize="Medium" />
        <Label Text="{Binding Category, Mode=OneWay}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>